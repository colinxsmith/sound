#!/bin/bash
#41 06 * * 3 /home/pi/sound/names_in_songs names.m4a > name`date +\%d-\%m-\%Y-\%T`
#11 14 * * 3 /home/pi/sound/names_in_songs names2.m4a > name`date +\%d-\%m-\%Y-\%T`
#start time is around 6:40am and 14:10
file=$1
length=${2:-25\:00}
rm /home/pi/Music/$file
echo start $(date)
ffmpeg -to $length -i "https://lstn.lv/bbcradio.m3u8?station=bbc_6music&bitrate=320000" -c copy /home/pi/Music/$file &> /dev/null
echo end $(date)
scp /home/pi/Music/$file pi@new64.local:/home/pi/Music
mpc -h new64.local --wait update
mpc -h new64.local playlist
